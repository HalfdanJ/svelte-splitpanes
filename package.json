{
	"name": "svelte-splitpanes",
	"version": "0.7.12",
	"description": "A full featured resizable pane layout splitter, ported from vue-splitpanes",
	"author": {
		"name": "Olivier Refalo",
		"url": "https://github.com/orefalo"
	},
	"keywords": [
		"svelte",
		"component",
		"layout",
		"split",
		"splitter",
		"pane",
		"panel",
		"resize",
		"resizable"
	],
	"bugs": "https://github.com/orefalo/svelte-splitpanes/issues",
	"homepage": "https://orefalo.github.io/svelte-splitpanes/",
	"repository": {
		"type": "git",
		"url": "https://github.com/orefalo/svelte-splitpanes"
	},
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "cross-env DEV=1 vite dev --port 3000",
		"build": "vite build && node ./scripts/create-minified-size-badges.js",
		"package": "svelte-package && node scripts/clean-package-json.js",
		"preview": "vite preview --port 3000",
		"prepare": "husky install",
		"static-serv": "serve -l 3000 --no-clipboard",
		"test": "playwright test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --cache --plugin-search-dir=. !./pnpm-lock.yaml !./CHANGELOG.md . && eslint --cache --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --cache --plugin-search-dir=. !./pnpm-lock.yaml !./CHANGELOG.md .",
		"commit": "npx lint-staged && cross-env NO_VERIFY=1 node ./node_modules/cz-customizable/standalone.js",
		"fetch-and-publish": "node scripts/fetch-and-publish.js"
	},
	"devDependencies": {
		"@commitlint/cli": "17.4.2",
		"@commitlint/config-conventional": "17.4.2",
		"@sveltejs/adapter-static": "1.0.6",
		"@sveltejs/kit": "1.3.10",
		"@sveltejs/package": "1.0.2",
		"@typescript-eslint/eslint-plugin": "5.50.0",
		"@typescript-eslint/parser": "5.50.0",
		"cross-env": "7.0.3",
		"cz-customizable": "7.0.0",
		"eslint": "8.33.0",
		"eslint-config-prettier": "8.6.0",
		"eslint-plugin-markdown": "3.0.0",
		"eslint-plugin-svelte3": "4.0.0",
		"highlight.js": "11.7.0",
		"husky": "8.0.3",
		"lint-staged": "13.1.0",
		"prettier": "2.8.3",
		"prettier-plugin-svelte": "2.9.0",
		"sass": "1.58.0",
		"svelte": "3.55.1",
		"svelte-check": "3.0.3",
		"svelte-highlight": "7.1.2",
		"svelte-preprocess": "5.0.1",
		"svelte-range-slider-pips": "2.1.1",
		"svelte2tsx": "0.6.1",
		"tslib": "2.5.0",
		"typescript": "4.9.5",
		"vite": "4.1.1"
	},
	"optionalDependencies": {
		"@playwright/test": "1.30.0",
		"badge-maker": "^3.3.1",
		"serve": "14.2.0"
	},
	"config": {
		"cz-customizable": {
			"config": ".cz-config.cjs"
		}
	},
	"dependencies": {
		"esm-env-robust": "^0.0.3"
	}
}
